# GalaxyRealms API Configuration
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# API Secret Key - Generate a secure random string
# You can generate one with: openssl rand -hex 32
GALAXY_API_SECRET_KEY=your-secret-key-here-change-this-to-a-random-string

# API Port (default: 8080)
# Make sure this port is not already in use
GALAXY_API_PORT=8080

# API Host (default: 0.0.0.0 to listen on all interfaces)
# Use 127.0.0.1 to only allow localhost connections
GALAXY_API_HOST=0.0.0.0

# Enable/Disable API (true/false)
GALAXY_API_ENABLED=true
